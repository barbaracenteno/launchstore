<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input 
            required
            type="text" 
            name="name" 
            placeholder="Ex: Maria da Silva"
            value="{{ user.name }}"
        >
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            placeholder="Ex: mariadasilva@email.com"
            value="{{ user.email }}"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>CPF ou CNPJ</div>
    <div class="input">
        <input 
            type="text" 
            name="cpf_cnpj" 
            placeholder="Insira o número do seu documento"
            value="{{ user.cpf_cnpj }}"
            onkeydown="Mask.apply(this, 'cpfCnpj')"
            onblur="Validate.apply(this, 'isCpfCnpj')"
        >
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input 
            type="text" 
            name="cep" 
            placeholder="00000-000"
            value="{{ user.cep }}"
            onkeydown="Mask.apply(this, 'cep')"
            onblur="Validate.apply(this, 'isCep')"
        >
    </div>
</div>

<div class="item">
    <div>Endereço Completo</div>
    <div class="input">
        <input 
            required
            type="text" 
            name="address" 
            placeholder="Ex: Rua dos Bobos, 0"
            value="{{ user.address }}"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            required
            type="password" 
            name="password"
            {% if not user.id %} 
            placeholder="Escolha uma senha segura"
            {% else %}
            placeholder="Confirme sua senha para atualizar o cadastro"
            {% endif %}

        >
    </div>
</div>

{% if not user.id %}
<div class="item">
    <div>Confimação de Senha</div>
    <div class="input">
        <input 
            required
            type="password" 
            name="passwordRepeat" 
            placeholder="Repita a senha escolhida"
        >
    </div>
</div>
{% endif %}






