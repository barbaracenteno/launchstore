<header>

    <div class="container">
        
        <a href="">
            <div class="logo">
                <h1>LauchStore</h1>
                <h2>Seu espaço para comprar e vender</h2>
            </div>
        </a>
    
        <form class="search" method="GET" action="/products/search">
            <input 
                type="text" 
                name="filter"
                placeholder="Buscar por produtos"
                {% if search.term %}
                    value={{search.term}}
                {% endif %}          
            >
        </form>

        <nav class="primary">
            <ul>
                <li>
                    <a href="/products/create">
                        <i class="material-icons">add</i>
                        Novo Anúncio
                    </a>
                </li>
                <li>
                    <a href="/accounts">
                        <i class="material-icons">account_circle</i>
                        Minha conta
                    </a>
                </li>
            </ul>
        </nav>

    </div> 

    

</header>