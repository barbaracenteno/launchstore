<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input 
            type="email" 
            name="email" 
            value="{{user.email}}"
            placeholder="Ex: mariadasilva@email.com"
            onblur="Validate.apply(this, 'isEmail')"
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            required
            type="password" 
            name="password"
            placeholder="Digite uma nova senha"
        >
    </div>
</div>

<div class="item">
    <div>Confirmação de Senha</div>
    <div class="input">
        <input 
            required
            type="password" 
            name="passwordRepeat"
            placeholder="Confirme a senha escolhida"
        >
    </div>
</div>

<input type="hidden" name="token" value="{{token}}">







